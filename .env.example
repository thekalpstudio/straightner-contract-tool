# Straightner Environment Variables
# Copy this file to .env and customize as needed

# ============================================
# Server Configuration
# ============================================

# Port for the API server (default: 3000)
PORT=3000

# ============================================
# Redis Configuration (for queue-based endpoints)
# ============================================

# Redis connection URL (default: redis://localhost:6379)
REDIS_URL=redis://localhost:6379

# Queue name for compilation jobs (default: compile)
QUEUE_NAME=compile

# ============================================
# Job Configuration
# ============================================

# Number of completed jobs to keep (default: 1000)
REMOVE_ON_COMPLETE=1000

# Number of failed jobs to keep (default: 1000)
REMOVE_ON_FAIL=1000

# Job time-to-live in milliseconds (default: 600000 = 10 minutes)
JOB_TTL_MS=600000

# Worker concurrency - number of jobs to process simultaneously (default: 1)
WORKER_CONCURRENCY=1

# ============================================
# Rate Limiting
# ============================================

# Maximum requests per minute (default: 60)
RATE_LIMIT_PER_MIN=60
